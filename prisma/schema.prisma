generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

enum ContentType {
  MOVIE
  SHOW
  SERIES
}

model User {
  userId   String @id @default(uuid())
  name     String @db.VarChar(50)
  email    String @unique @db.VarChar(100)
  password String @db.VarChar(100)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subscriptions Subscription[]
  watchlists    Watchlist[]
  ratings       Ratings[]
}

model Plan {
  planId       String   @id @default(uuid())
  name         String   @unique @db.VarChar(50)
  maxUsers     Int
  maxWatchlist Int // -1 = Unlimited 
  price        Int
  maxQuality   String   @default("HD")
  duration     String   @default("30d")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  subscriptions Subscription[]
}

model Subscription {
  subId     String             @id @default(uuid())
  planId    String
  userId    String
  startDate DateTime
  endDate   DateTime
  status    SubscriptionStatus
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  plan Plan @relation(fields: [planId], references: [planId])
  user User @relation(fields: [userId], references: [userId])

  @@index([userId])
  @@index([planId])
}

model Genre {
  genreId String @id @default(uuid())
  name    String @db.VarChar(50)

  contents ContentGenre[]
}

model Content {
  contentId     String         @id @default(uuid())
  title         String         @db.VarChar(50)
  details       String?
  language      String[] // Postgres TEXT[]
  type          ContentType
  releaseYear   String         @default("No Data")
  averageRating Int            @default(7) @db.SmallInt
  ratingCount   Int            @default(20000)
  movie         Movie?
  genres        ContentGenre[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  watchlists    Watchlist[]
  ratings       Ratings[]
}

model Movie {
  movieId      String @id @default(uuid())
  contentId    String @unique
  movieUrl     String @db.VarChar(150)
  thumbnailUrl String @db.VarChar(150)
  duration     Int

  content Content @relation(fields: [contentId], references: [contentId], onDelete: Cascade)
}

model ContentGenre {
  genreId   String
  contentId String

  genre   Genre   @relation(fields: [genreId], references: [genreId], onDelete: Cascade)
  content Content @relation(fields: [contentId], references: [contentId], onDelete: Cascade)

  @@id([genreId, contentId])
}

model Watchlist {
  watchlistId String @id @default(uuid())
  contentId   String
  userId      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   Content  @relation(fields: [contentId], references: [contentId], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([contentId, userId])
}

model Ratings {
  ratingId  String   @id @default(uuid())
  userId    String
  contentId String
  rating    Int      @db.SmallInt
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  content Content @relation(fields: [contentId], references: [contentId], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([contentId, userId])
}
